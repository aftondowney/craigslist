{{#if addNewListing}}
  <h1>New Listing</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="description">description</label>
          {{input value=description id="description"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input value=price id="price"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <button {{action 'saveListing'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'listingFormShow'}}>New Listing</button>
{{/if}}
